    private void BNT_SALVARActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
        int i = 10;
        
        if(TXT_NOME.getText().isEmpty() )
           {
             JOptionPane.showMessageDialog(this, "Informe o seu nome");
           }
       
       if(TXT_ESTADO.getText().isEmpty() )
           {
             JOptionPane.showMessageDialog(this, "Informe o seu estado");
           }
       
       if(TXT_CIDADE.getText().isEmpty() )
           {
             JOptionPane.showMessageDialog(this, "Informe a sua cidade");
           }
       
       nome[i] = TXT_NOME.getText();
       estado[i] = TXT_ESTADO.getText();
       cidade[i] = TXT_CIDADE.getText();
       
    }                                          

    private void BNT_IMPRIMIRActionPerformed(java.awt.event.ActionEvent evt) {                                             
       String mensagem = "";
       int i = 0;
       for(int x = 0; x < i; x++)
           {
               mensagem += "Nome: " + nome[x] + " Estado: " + estado[x] + " Cidade: " + cidade[x] "\n";
           }
           JOptionPane.showMessageDialog(this,mensagem);
    }                                            

